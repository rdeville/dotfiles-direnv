#!/usr/bin/env bash
# shellcheck disable=SC2155

source_up_if_exists

# TMUXP VARIABLES
export TMUXP_SESSION_NAME="pub-dot-neovim"

export NVIM_APPNAME="nvim-dev"
CFG_DIR="${XDG_CONFIG_DIR:-${HOME}/.config/}/nvim-dev"
if ! [[ -d "${CFG_DIR}" ]];then
  _log "INFO" "Setting repo symlink to ${CFG_DIR//${HOME}/~\/}"
  ln -s "$(realpath -p "${PWD}")" "${CFG_DIR}"
fi

# vim: ft=bash
